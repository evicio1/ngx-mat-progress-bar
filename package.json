{
  "name": "ngx-mat-progress-bar",
  "version": "1.0.1",
  "description": "Angular Material progress bar library workspace with modern Angular standalone architecture",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:lib": "ng build mat-progress-bar-library",
    "build:demo": "ng build demo",
    "build:all": "npm run build:lib && npm run build:demo",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:lib": "ng test mat-progress-bar-library",
    "serve:demo": "ng serve demo --open",
    "package": "npm run build:lib && cd dist/mat-progress-bar-library && npm pack",
    "publish:npm": "npm run build:lib && cd dist/mat-progress-bar-library && npm publish"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.9",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.9",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/animations": "^20.3.6",
    "@angular/build": "^20.3.6",
    "@angular/cli": "^20.3.6",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.0",
    "typescript": "~5.9.2"
  }
}
